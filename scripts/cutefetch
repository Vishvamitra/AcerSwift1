#!/bin/bash
echo -e "\n"
echo -e "              \e[1;30m   Kernel\e[m                                       $(uname -r)"
echo -e "\n              \e[1;37m   OS\e[m                           $(lsb_release -d | cut -f 2)"
echo -e "\n              \e[1;32m   Installed Packages\e[m                                    $(dpkg -l | wc -l)"
echo -e "\n              \e[1;35m   Window Manager\e[m                                         $(wmctrl -m | grep -i name | cut -f 2 -d ":")"
echo -e "\n              \e[1;36m   Host Name\e[m                                       $(uname -n)"
echo -e "\n              \e[1;33m   CPU\e[m               $(cat /proc/cpuinfo | grep model\ name | cut -f 2 -d ":" | sort -u)"
echo -e "\n              \e[1;34m   Session\e[m                                      $(uptime -p)"
echo -e "\n              \e[1;31m   Screen Brightness\e[m                                      $(brightnessctl | grep -i current | cut -f 2 | cut -d " " -f 4 | cut -b 2,3,4)"
echo -e "\n\n"
