#!/bin/bash
echo -e "\n"
echo -e "        \e[1;30mKernel\e[m            $(uname -r)"
echo -e "\n        \e[1;37mDistribution\e[m      $(lsb_release -d | cut -f 2)"
echo -e "\n        \e[1;31mPackages\e[m          $(dpkg -l | wc -l)"
echo -e "\n        \e[1;35mWM\e[m                i3wm"
echo -e "\n        \e[1;36mHost\e[m              $(uname -n)"
echo -e "\n        \e[1;34mCPU\e[m              $(cat /proc/cpuinfo | grep model\ name | cut -f 2 -d ":" | sort -u)"
echo -e "\n        \e[1;32mUptime\e[m            $(uptime -p)"
echo -e "\n\n"
